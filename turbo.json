{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "globalEnv": ["*"],
  "tasks": {
    "dev": {
      "dependsOn": [
        "@valley/shared#build",
        "@valley/db#build",
        "@valley/auth#build"
      ],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", "!**/*.stories.{tsx,jsx,mdx}"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "dist/**",
        "build/**"
      ]
    },
    "build:storybook": {},
    "lint": {},
    "typecheck": {},
    "start": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:migrate:reset": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:generate-prod": {
      "cache": false
    },
    "db:deploy": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    }
  }
}
