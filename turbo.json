{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "globalEnv": [
    "NODE_ENV",
    "WEB_PORT",
    "GALLERY_PORT",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_TUSD_URL",
    "API_URL",
    "TUSD_URL",
    "GITHUB_TOKEN",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "SESSION_SECRET",
    "HONEYPOT_SECRET"
  ],
  "tasks": {
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", "!**/*.stories.{tsx,jsx,mdx}"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "dist/**"
      ]
    },
    "build:storybook": {},
    "lint": {},
    "typecheck": {
      "dependsOn": ["^db:generate"]
    },
    "db:migrate": {
      "cache": false
    },
    "db:migrate:reset": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    }
  }
}
