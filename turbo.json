{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "globalEnv": ["*"],
  "tasks": {
    "dev": {
      "dependsOn": ["^db:generate", "@valley/shared#build"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", "!**/*.stories.{tsx,jsx,mdx}"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "dist/**",
        "build/**"
      ]
    },
    "build:storybook": {},
    "lint": {},
    "typecheck": {
      "dependsOn": ["^db:generate"]
    },
    "start": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:migrate:reset": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:deploy": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    }
  }
}
