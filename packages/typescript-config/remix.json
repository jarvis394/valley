{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Remix",
  "extends": "./base.json",
  "compilerOptions": {
    "types": ["@remix-run/node", "vite/client"],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "allowJs": false,
    "jsx": "preserve",
    "noEmit": true,
    "strict": true
  },
  "exclude": ["node_modules", ".cache"]
}
