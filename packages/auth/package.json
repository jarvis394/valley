{
  "name": "@valley/auth",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "swc src/* --watch --out-dir dist",
    "build": "tsc -b -v",
    "lint": "eslint . --max-warnings 0 --fix",
    "typecheck": "tsc --noEmit"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./dist/src/*.js",
      "require": "./dist/src/*.js"
    }
  },
  "dependencies": {
    "@valley/db": "*",
    "@valley/ui": "*",
    "@valley/shared": "*",
    "@dotenvx/dotenvx": "^1.39.0",
    "@remix-run/node": "^2.16.0",
    "better-auth": "^1.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@valley/eslint-config": "*",
    "@valley/typescript-config": "*",
    "@types/node": "^22.9.0",
    "eslint": "^8.56.11",
    "typescript": "^5.7.2"
  }
}
